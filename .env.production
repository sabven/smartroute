# Production Configuration for 1000+ Rides/Day

# Environment Variables for Production
PORT=5000
NODE_ENV=production
DATABASE_URL=postgresql://username:password@your-db-host:5432/smartroute_prod

# Database Connection Pool (optimized for high load)
DB_POOL_MAX=25
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_TIMEOUT=30000    # 30 seconds

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMS_API_KEY=your-sms-provider-api-key
EMAIL_API_KEY=your-email-provider-api-key

# Performance Settings
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300  # 5 minutes

# Security Settings
ENABLE_HELMET=true
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://admin.your-domain.com

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
